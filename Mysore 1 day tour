    <script>
        document.addEventListener('DOMContentLoaded', () => {

            const itineraryData = [
                { 
                    id: 1,
                    title: "Chamundi Hill",
                    time: "Pickup at 8:30 AM",
                    description: "Start your day with a visit to the famous Chamundeshwari Temple, perched atop Chamundi Hill. Enjoy panoramic views of Mysore city.",
                    duration: "1.5 Hours"
                },
                { 
                    id: 2,
                    title: "Mysore Zoo",
                    time: "Around 10:30 AM",
                    description: "Visit one of the oldest and most popular zoos in India, known for its rich collection of animals and birds in spacious enclosures.",
                    duration: "2 Hours"
                },
                { 
                    id: 3,
                    title: "Mysore Palace",
                    time: "Around 1:30 PM (after lunch break)",
                    description: "Explore the magnificent Mysore Palace, the former seat of the Wodeyar dynasty. Marvel at its stunning architecture, intricate carvings, and beautiful paintings.",
                    duration: "2 Hours"
                },
                { 
                    id: 4,
                    title: "St. Philomena's Church",
                    time: "Around 3:45 PM",
                    description: "Visit one of the tallest churches in Asia, an architectural marvel built in the Neo-Gothic style, inspired by the Cologne Cathedral in Germany.",
                    duration: "30 Minutes"
                },
                { 
                    id: 5,
                    title: "Brindavan Gardens (KRS)",
                    time: "Around 5:00 PM",
                    description: "Conclude your day at the beautiful Brindavan Gardens, located at the Krishnaraja Sagar (KRS) Dam. Enjoy the musical fountain show in the evening.",
                    duration: "2 Hours (including show)"
                },
                { 
                    id: 6,
                    title: "Drop-off",
                    time: "Around 8:30 PM",
                    description: "You will be dropped back at your hotel or preferred location in Mysore.",
                    duration: ""
                }
            ];

            const vehicleData = [
                { id: 'sedan', name: 'Sedan', price: '₹2500', capacity: 'Up to 4 Passengers', default: true },
                { id: 'suv', name: 'SUV', price: '₹3500', capacity: 'Up to 7 Passengers', default: false },
                { id: 'van', name: 'Tempo Traveller', price: '₹5000', capacity: 'Up to 12 Passengers', default: false }
            ];

            const inclusionsData = [
                "Private Air-Conditioned Vehicle",
                "Professional Driver & Driver Bata",
                "Toll & Parking Fees",
                "Pickup & Drop-off from your Hotel"
            ];

            const exclusionsData = [
                "All Monument Entry Fees",
                "Food & Beverages",
                "Tour Guide Charges",
                "Personal Expenses"
            ];

            const timingData = {
                labels: ["Chamundi Hill", "Mysore Zoo", "Mysore Palace", "St. Philomena's", "Brindavan Gardens"],
                data: [1.5, 2, 2, 0.5, 2]
            };

            const itineraryList = document.getElementById('itinerary-list');
            itineraryData.forEach(item => {
                const el = document.createElement('div');
                el.className = 'itinerary-item';
                el.innerHTML = `
                    <div class="itinerary-header">
                        <div>
                            <h4 class="text-xl font-semibold text-gray-900">${item.title}</h4>
                            <p class="text-md text-amber-700 font-medium">${item.time}</p>
                        </div>
                        <span class="itinerary-arrow text-2xl text-amber-700">&#x25BC;</span>
                    </div>
                    <div class="itinerary-content">
                        <div class="p-4 border-t border-gray-100">
                            <p class="text-gray-700 mb-2">${item.description}</p>
                            ${item.duration ? `<p class="text-sm text-gray-500 font-medium">Suggested Duration: ${item.duration}</p>` : ''}
                        </div>
                    </div>
                `;
                el.addEventListener('click', () => {
                    el.classList.toggle('open');
                });
                itineraryList.appendChild(el);
            });

            const vehicleTabs = document.getElementById('vehicle-tabs');
            const vehicleName = document.getElementById('vehicle-name');
            const vehiclePrice = document.getElementById('vehicle-price');
            const vehicleCapacity = document.getElementById('vehicle-capacity');

            vehicleData.forEach(vehicle => {
                const btn = document.createElement('button');
                btn.className = 'vehicle-btn font-semibold';
                btn.textContent = vehicle.name;
                btn.dataset.id = vehicle.id;
                if (vehicle.default) {
                    btn.classList.add('active');
                }
                btn.addEventListener('click', () => {
                    document.querySelectorAll('.vehicle-btn').forEach(b => b.classList.remove('active'));
                    btn.classList.add('active');
                    
                    const activeVehicle = vehicleData.find(v => v.id === btn.dataset.id);
                    if (activeVehicle) {
                        vehicleName.textContent = activeVehicle.name;
                        vehiclePrice.textContent = activeVehicle.price;
                        vehicleCapacity.textContent = activeVehicle.capacity;
                    }
                });
                vehicleTabs.appendChild(btn);
            });

            const inclusionsList = document.getElementById('inclusions-list');
            inclusionsData.forEach(item => {
                const li = document.createElement('li');
                li.className = 'flex items-center';
                li.innerHTML = `
                    <span class="text-green-700 mr-3 text-2xl">&#x2713;</span>
                    ${item}
                `;
                inclusionsList.appendChild(li);
            });

            const exclusionsList = document.getElementById('exclusions-list');
            exclusionsData.forEach(item => {
                const li = document.createElement('li');
                li.className = 'flex items-center';
                li.innerHTML = `
                    <span class="text-red-700 mr-3 text-2xl">&#x2717;</span>
                    ${item}
                `;
                exclusionsList.appendChild(li);
            });

            const ctx = document.getElementById('timingChart').getContext('2d');
            const timingChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: timingData.labels,
                    datasets: [{
                        label: 'Suggested Hours',
                        data: timingData.data,
                        backgroundColor: 'rgba(180, 83, 9, 0.7)',
                        borderColor: 'rgba(180, 83, 9, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    indexAxis: 'y',
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        x: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Suggested Hours'
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return ` ${context.dataset.label}: ${context.raw} hours`;
                                }
                            }
                        }
                    }
                }
            });

            const navButtons = document.querySelectorAll('.nav-btn');
            const sections = document.querySelectorAll('section[id]');

            const observerOptions = {
                root: null,
                rootMargin: '0px',
                threshold: 0.4
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const id = entry.target.getAttribute('id');
                        navButtons.forEach(btn => {
                            btn.classList.remove('active');
                            if (btn.getAttribute('href') === `#${id}`) {
                                btn.classList.add('active');
                            }
                        });
                    }
                });
            }, observerOptions);

            sections.forEach(section => {
                observer.observe(section);
            });

            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    document.querySelector(this.getAttribute('href')).scrollIntoView({
                        behavior: 'smooth'
                    });
                });
            });

        });
    </script>
</body>
</html>