        }
        .nav-btn.active {
            @apply bg-amber-700 text-white shadow-md;
        }
        .nav-btn:not(.active) {
            @apply text-amber-800 hover:bg-amber-100;
        }
        .vehicle-btn {
            @apply px-4 py-2 rounded-lg transition-all duration-300 border-2 border-transparent cursor-pointer;
        }
        .vehicle-btn.active {
            @apply bg-amber-700 text-white border-amber-700 shadow-lg;
        }
        .vehicle-btn:not(.active) {
            @apply bg-white text-amber-800 border-amber-200 hover:bg-amber-50;
        }
        .itinerary-item {
            @apply bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden cursor-pointer transition-all duration-300;
        }
        .itinerary-item.open {
            @apply shadow-lg;
        }
        .itinerary-header {
            @apply flex justify-between items-center p-4;
        }
        .itinerary-content {
            @apply max-h-0 overflow-hidden transition-all duration-500 ease-in-out;
        }
        .itinerary-item.open .itinerary-content {
            @apply max-h-screen;
        }
        .itinerary-arrow {
            @apply transition-transform duration-500;
        }
        .itinerary-item.open .itinerary-arrow {
            @apply rotate-180;
        }
        .chart-container {
            position: relative;
            width: 100%;
            max-width: 800px;
            margin-left: auto;
            margin-right: auto;
            height: 300px;
            max-height: 400px;
        }
        @media (min-width: 768px) {
            .chart-container {
                height: 350px;
            }
        }
        .section-intro {
            @apply text-lg text-gray-700 max-w-3xl mx-auto mb-8;
        }
    </style>
